# Database (Add connection pooling params for Vercel)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&connection_limit=1&pool_timeout=0

# Auth
AUTH_SECRET=your-super-secret-key
SALT_ROUNDS=10

# Next.js (Required for production)
NEXTAUTH_URL=https://your-app-name.vercel.app
NODE_ENV=production

# Supabase Storage
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# url for AI
GEMINI_API_KEY=your-gemini-ai-api-key

# TikTok Shop
TIKTOK_APP_KEY=your-tiktok-app-key
TIKTOK_APP_SECRET=your-tiktok-app-secret
TIKTOK_REDIRECT_URI=https://your-domain.com/api/tiktok/callback
# Optional overrides (default prod values are used if unset)
# TIKTOK_AUTH_BASE_URL=https://auth.tiktok-shops.com
# TIKTOK_API_BASE_URL=https://open-api.tiktokglobalshop.com