generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ==================== CORE SAAS MODELS ====================

model Store {
  id          String     @id @default(cuid())
  name        String
  slug        String?
  description String?
  logo        String?
  currency    String     @default("IDR")
  phone       String?
  email       String?
  address     String?
  userId      String     @map("user_id")

  products    Product[]
  categories  Category[]
  tiktok      TikTokIntegration?
  
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  @@map("stores")
}

model Category {
  id          String     @id @default(cuid())
  name        String
  slug        String
  description String?
  image       String?
  parentId    String?    @map("parent_id")
  storeId     String     @map("store_id")
  
  parent      Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryToCategory")
  store       Store      @relation(fields: [storeId], references: [id], onDelete: Cascade)
  products    Product[]
  
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  @@unique([slug, storeId])
  @@map("categories")
}

model Product {
  id          String         @id @default(cuid())
  name        String
  slug        String
  description String?
  storeId     String         @map("store_id")
  categoryId  String?        @map("category_id")
  status      ProductStatus  @default(DRAFT)
  tiktokId    String?        @map("tiktok_id")
  
  store       Store          @relation(fields: [storeId], references: [id], onDelete: Cascade)
  category    Category?      @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
  variants    ProductVariant[]
  
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  @@unique([slug, storeId])
  @@map("products")
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  position  Int      @default(0)
  productId String   @map("product_id")
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("product_images")
}

model ProductVariant {
  id           String   @id @default(cuid())
  name         String   // e.g., "Red - Large", "Blue - Small"
  sku          String?
  gtin         String?  // Global Trade Item Number (EAN/UPC)
  barcodeImage String?  @map("barcode_image") // URL to barcode image in Supabase
  price        Decimal  @db.Decimal(12, 2)
  costPrice    Decimal? @db.Decimal(12, 2) @map("cost_price")
  stock        Int      @default(0)
  weight       Decimal? @db.Decimal(10, 2)
  productId    String   @map("product_id")
  tiktokId     String?  @map("tiktok_id")
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  stockMovements StockMovement[]
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("product_variants")
}

model TikTokIntegration {
  id                String   @id @default(cuid())
  storeId           String   @unique @map("store_id")
  shopId            String
  accessToken       String   @map("access_token")
  refreshToken      String   @map("refresh_token")
  accessTokenExpiry DateTime @map("access_token_expiry")
  scopes            String?

  store    Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tiktok_integrations")
}

model StockMovement {
  id              String          @id @default(cuid())
  variantId       String          @map("variant_id")
  quantity        Int             // positive for in, negative for out
  type            StockMovementType
  reference       String?         // e.g., order ID, adjustment reason
  notes           String?
  previousStock   Int             @map("previous_stock")
  newStock        Int             @map("new_stock")
  
  variant         ProductVariant  @relation(fields: [variantId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime        @default(now()) @map("created_at")

  @@map("stock_movements")
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum StockMovementType {
  ADJUSTMENT
  SALE
  RETURN
  RESTOCK
  TRANSFER
}
